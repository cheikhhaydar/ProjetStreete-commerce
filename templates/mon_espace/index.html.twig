{% extends 'base.html.twig' %}

{% block title %}Mon Espace{% endblock %}

{% block body %}
<style>
    .paragraphe {
      margin-bottom: 3%;
    }
    .table {
      margin-bottom:10%;
    }
    a {
      text-decoration:none;
    }
</style>
{% if is_granted('ROLE_ADMIN') %}
   <p class="alert alert-dismissible alert-success">Vous êtes connecter en tant  qu'Admin 
   <a href="{{ path('admin') }}" class=" float-right alert-success">Espace Admin</a></p> 
{% endif %}

{% if is_granted('ROLE_USER') %}
   <p class="paragraphe">Bonjour {{ app.user.firstname }} </p>
{% endif %}

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"></th>
     
      <th scope="col">Prénom</th>
       <th scope="col">Nom</th>
      <th scope="col">E-mail</th>

    </tr>
  </thead>
  <tbody>
    
    {% if app.user %}
 <tr class="table-info">
    <th scope="row"></th>


    <td>  {{app.user.firstname}} </td>
     <td> {{app.user.lastname}} </td>
     <td> {{app.user.email}} </td>
   
 
  
   
 </tr>
   
   {% endif %}

  
      {# <a href="{{ path('edit_infos' , {'id' : user.id}) }}"><i class="fas fa-edit"></i></a> #}

     
  </tbody>
</table>


{% endblock %}

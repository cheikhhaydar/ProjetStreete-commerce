{% extends 'base.html.twig' %}

{% block title %}Article entier! {% endblock %}

{% block body %}

<style>
.img {
  width:300px;
  height:200px;
}

.articles {
border-radius:10px;
box-shadow:0 4px 16px rgba(0,0.0,.25);
padding:10px;
width:30%;
margin:0 auto;
}
img {
    border-radius:5px;
    box-shadow:0 4px 10px rgba(0,0.0,.25);
    margin :5px 10px 5px 10px;
}

</style>

<section class="articles mt-5">
<article class="mb-5">
<h2>{{article.title}}</h2>
<div class="metadata">
  publié le {{article.createdAt | date('d-m-Y')}} à {{article.createdAt | date('H:i')}}
  <span class="badge badge-danger">{{ article.artist.title }}</span>
</div>
<div class="content">
<img class ="img" src="{{ path('afficher_article' , {'id' : article.id}) }}" alt="photo article" />

<p>
{{ article.content }}
 </p>

</div>
</article>


</section>

{% endblock %}